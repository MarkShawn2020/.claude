{
  "model": "sonnet",
  "permissions": {
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "~/.claude",
      "~/.neurora",
      "~/__core__",
      "~/projects"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx ccm track",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
